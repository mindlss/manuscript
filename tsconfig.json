{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "uploads",
    "logs"
  ]
}
